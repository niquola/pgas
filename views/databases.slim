.row-fluid
  .span3
    .page-header: h1 Databases
    ul.nav.nav-tabs.nav-stacked
      - @databases.each do |database|
        li: a href="databases/#{database.name}"= database.name
  .span9
    .page-header: h1 Create database
    form.form-horizontal method='POST' action='/databases'
      .control-group
        label.control-label Database Name
        .controls: input name='name'
      .control-group
        label.control-label Template database
        .controls
          select name='template'
            option value='' no template
            - @databases.each do |db|
              option value=db.name = db.name
      .control-group
        label.control-label Comment
        .controls: textarea name='comment'
      .form-actions
        button.btn type='submit' Create
